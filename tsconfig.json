{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "rules": {
        "@typescript-eslint/camelcase": [
            "error",
            {
                "properties": "never"
            }
        ],
        "@typescript-eslint/ban-ts-ignore": [
            "error",
            {
                "properties": "never"
            }
        ],
    }
}